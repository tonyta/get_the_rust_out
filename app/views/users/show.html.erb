<% provide(:title, @user.name) %>

<div class='row'>

  <aside class='span4'>
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <% if signed_in? && current_user?(@user) %>
    <section>
      <%= render 'shared/micropost_form' %>
    </section>
    <% end %>
  </aside>

  <div class='span8'>
    <% if @user.microposts.any? %>
    <h3>Microposts (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
    <% end %>
  </div>

</div>
